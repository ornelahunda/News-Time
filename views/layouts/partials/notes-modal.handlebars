<!--Commentss Modal-->

<div class="modal fade modalComments" id="CommentsModal{{this._id}}" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Commentss for {{this.title}}</h4>
            </div>
            <div class="modal-body">
                {{#if this.Commentss}}
                    {{#each this.Commentss}}
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <p class="previousCommentss"> {{this.body}}</p>
                                <button type="button" class="btn btn-danger deleteComments" data-Comments-id={{this._id}} data-article-id={{this.article}}>X</button>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h4>No Commentss for this article yet.</h4>
                        </div>
                    </div>
                {{/if}}
                <div class="form-group">
                    <textarea id="CommentsText{{this._id}}" class="form-control" rows="4" placeholder="New Comments"></textarea>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary saveComments" data-id={{this._id}}>Save Comments</button>
            </div>
        </div>
    </div>
</div>